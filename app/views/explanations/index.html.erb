<h1>Listing explanations</h1>

<table>
  <thead>
    <tr>
      <th>Problem</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @explanations.each do |explanation| %>
      <tr>
        <td><%= explanation.problem %></td>
        <td><%= explanation.description %></td>
        <td><%= link_to 'Show', explanation %></td>
        <td><%= link_to 'Edit', edit_explanation_path(explanation) %></td>
        <td><%= link_to 'Destroy', explanation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Explanation', new_explanation_path %>
